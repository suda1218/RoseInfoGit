<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="50dp"
            android:background="@color/colorAccent"
            tools:srcCompat="@tools:sample/avatars[1]"
            android:id="@+id/student_image"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_alignTop="@id/student_image"
            android:layout_toRightOf="@+id/student_image"
            android:textSize="20sp"
            android:text="My Name: "
            android:id="@+id/studentNameTextView"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/studentNameTextView"
            android:layout_alignTop="@id/studentNameTextView"
            android:textSize="20sp"
            android:text="Test"
            android:id="@+id/student_name"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Major: "
            android:layout_toRightOf="@+id/student_image"
            android:id="@+id/MajorTextView"
            android:layout_alignBottom="@id/student_image"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Major"
            android:layout_toRightOf="@id/MajorTextView"
            android:layout_alignTop="@id/MajorTextView"
            android:id="@+id/major"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Email: "
            android:id="@+id/StudentEmailTextView"
            android:textSize="20sp"
            android:layout_alignLeft="@id/student_image"
            android:layout_below="@id/student_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="Email"
            android:id="@+id/email"
            android:layout_alignTop="@id/StudentEmailTextView"
            android:layout_toRightOf="@id/StudentEmailTextView"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




</RelativeLayout>