<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
                android:layout_margin="4dp"
                android:id="@+id/RelativeLayout"
                android:background="@android:color/holo_blue_bright"
                card_view:cardCornerRadius="8dp">



    <EditText
            android:id="@+id/add_username"
            android:hint="UserName"
            android:textSize="24sp"
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageView2"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/add_password"
            android:hint="Password"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/add_username"
            android:layout_width="300dp"

            android:layout_height="wrap_content"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:srcCompat="@drawable/roseseal"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView2"
            android:layout_marginTop="20dp"/>

    <Button android:layout_width="90dp"
            android:layout_marginTop="20dp"
            android:text="Student"
            android:layout_height="40dp"
            android:layout_below="@id/add_password"
            android:layout_alignLeft="@id/add_username"/>
    <Button android:layout_width="90dp"
            android:layout_marginTop="20dp"
            android:text="Professor"
            android:layout_height="40dp"
            android:layout_below="@id/add_password"
            android:layout_alignRight="@id/add_username"/>

</RelativeLayout>